<Window x:Class="Braill.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Braill"
        mc:Ignorable="d"
        Title="Braill" Height="500" Width="800" ResizeMode="NoResize"
        Background="#f0f0f0">

    <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">
        <Label Content="Braill"
               FontSize="36"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,10"/>

        <Button Content="CONNECT"
                Width="180"
                Height="50"
                Margin="0,10"
                Background="#007ACC"
                Foreground="White"
                FontWeight="SemiBold"
                FontSize="16"
                BorderThickness="0"
                HorizontalAlignment="Center"
                Cursor="Hand" Click="Button_Click"/>

        <TextBox VerticalScrollBarVisibility="Visible"
                 x:Name="tbxObsah"
                 Height="200"
                 Margin="0,10"
                 Padding="10"
                 FontSize="14"
                 TextWrapping="Wrap"
                 Background="White"
                 BorderBrush="#CCCCCC"
                 BorderThickness="1"
                 AcceptsReturn="True"
                 IsReadOnly="True"/>

        <WrapPanel HorizontalAlignment="Center" Margin="0,10" >
            <Button Content="SPEAK"
                    Width="100"
                    Height="35"
                    Margin="20,0"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand" Click="Button_Click_2"/>

            <Button Content="Dark Mode"
                    x:Name="btnMode"
                    Width="100"
                    Height="35"
                    Margin="20,0"
                    Background="#444"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Cursor="Hand" Click="Button_Click_1"/>
        </WrapPanel>
    </StackPanel>
</Window>
